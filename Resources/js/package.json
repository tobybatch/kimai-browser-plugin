{
  "title": "Simple Browser Extension using React",
  "name": "react-browser-extension-minimal",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/herodrigues/react-browser-extension-minimal.git"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "base64-image-loader": "^1.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.5.0",
    "eslint-plugin-react": "^7.20.3",
    "raw-loader": "^4.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.0.9"
  },
  "description": "Browser extension using React",
  "bugs": {
    "url": "https://github.com/herodrigues/react-browser-extension/issues"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "chrome",
      "browser"
    ]
  },
  "homepage": "https://github.com/herodrigues/react-browser-extension#readme",
  "scripts": {
    "build": "./node_modules/.bin/webpack --config webpack.prod.js --progress --colors",
