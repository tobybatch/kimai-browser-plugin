{
  "manifest_version": 2,
  "name": "Kimai Time Logger",
  "version": "0.1.0",
  "description": "Log time into a Kimai instance straight from git hub.",
  "author": "Toby Batch",
  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16x16.png",
      "32": "images/icon-32x32.png",
      "48": "images/icon-48x48.png",
      "128": "images/icon-128x128.png"
    },
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "static/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
