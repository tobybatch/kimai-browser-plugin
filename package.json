{
  "name": "kimai-logger",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/chrome": "0.0.126",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "crx3": "^1.1.3",
    "filemanager-webpack-plugin": "3.0.0-beta.0",
    "react": "^17.0.1",
    "react-app-rewired": "2.1.6",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "4.1.2",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "husky": "^6.0.0",
    "standard-version": "^9.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo git hooks are awesome!",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build:extension": "REACT_APP_BUILD_TARGET=extension react-app-rewired build",
    "build:web-app": "REACT_APP_BUILD_TARGET=web-app react-app-rewired build",
    "package": "crx3 -p -o -x KimaiBrowserPlugin.zip build",
    "deploy": "mv build.crx symfony/BrowserPluginBundle/Resources/assets/KimaiBrowserPlugin.crx",
    "test": "react-app-rewired test",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
